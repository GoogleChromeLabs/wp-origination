{
  "name": "google/wp-sourcery",
  "description": "WordPress plugin to determine the source of where things come from in WordPress whether slow code, inefficient queries, or bad markup.",
  "version": "0.1.0",
  "license": "GPL-2.0-or-later",
  "type": "wordpress-plugin",
  "keywords": [
    "wordpress",
    "performance"
  ],
  "homepage": "https://github.com/westonruter/wp-sourcery",
  "authors": [
    {
      "name": "Weston Ruter",
      "email": "westonruter@google.com",
      "homepage": "https://weston.ruter.net/"
    }
  ],
  "support": {
    "issues": "https://github.com/westonruter/wp-sourcery/issues"
  },
  "autoload": {
    "psr-4": {
      "Google\\WP_Sourcery\\": "includes"
    }
  },
  "require": {
    "php": ">=5.6",
    "composer/installers": "^1"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^0.5",
    "squizlabs/php_codesniffer": "^3.4",
    "wp-coding-standards/wpcs": "^1.2.1",
    "phpcompatibility/phpcompatibility-wp": "^2"
  },
  "prefer-stable" : true,
  "scripts": {
    "phplint": "find -L .  -path ./vendor -prune -o -name '*.php' -print0 | xargs -0 -n 1 -P 4 php -l",
    "phpcs": "@php ./vendor/bin/phpcs"
  }
}
